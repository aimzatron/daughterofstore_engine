<h1>Listing stores</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Description</th>
    <th></th>
  </tr>


<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.path %></td>
    <td><%= store.description %></td>
    <td><%= link_to 'Show', store %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Store', new_store_path %>
