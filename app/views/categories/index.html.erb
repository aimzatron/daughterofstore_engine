<!% cache("categories_index_#{@current_store.path}") do %>

    <h3> Categories</h3>

    <!%= paginate @current_store.categories %>

    <ul class="table table-striped">
      <% @current_store.categories.each do |category| %>
        <li>
          <%= link_to category.title, store_category_path(current_store, category) %>
        </li>
      <% end %>
    </ul>


<!% end %>

